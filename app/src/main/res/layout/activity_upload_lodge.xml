<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.cheahweiseng.Activity.Lodge.UploadLodgeActivity">

    <ImageView
        android:id="@+id/upload_lodge_pic"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/upload_lodge_description"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_gallery" />


    <EditText
        android:id="@+id/upload_lodge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Title"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_lodge_pic" />

    <RadioGroup
        android:id="@+id/upload_lodge_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_lodge_description"
        android:layout_alignEnd="@+id/upload_lodge_description"
        android:layout_alignLeft="@+id/upload_lodge_description"
        android:layout_alignRight="@+id/upload_lodge_description"
        android:layout_alignStart="@+id/upload_lodge_description"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_lodge_title">

        <TextView
            android:id="@+id/upload_lodge_status_title"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Lodge Status : "
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/upload_lodge_status_sale"
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_above="@+id/upload_lodge_title"
            android:layout_alignLeft="@+id/upload_lodge_title"
            android:layout_alignStart="@+id/upload_lodge_title"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1.06"
            android:text="For Sale" />

        <RadioButton
            android:id="@+id/upload_lodge_status_rent"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/upload_lodge_status"
            android:layout_alignEnd="@+id/upload_lodge_status"
            android:layout_alignRight="@+id/upload_lodge_status"
            android:layout_below="@+id/reg_first_name"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/upload_lodge_status_sale"
            android:layout_toRightOf="@+id/upload_lodge_status_sale"
            android:layout_weight="0.29"
            android:checked="false"
            android:paddingLeft="0dp"
            android:text="For Rent"
            tools:layout_alignEnd="@+id/upload_lodge_status_sale"
            tools:layout_alignRight="@+id/upload_lodge_status_sale" />

    </RadioGroup>

    <EditText
        android:id="@+id/upload_lodge_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_lodge_location"
        android:layout_alignEnd="@+id/upload_lodge_title"
        android:layout_alignRight="@+id/upload_lodge_title"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_lodge_status" />

    <EditText
        android:id="@+id/upload_lodge_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_lodge_price"
        android:layout_alignLeft="@+id/upload_lodge_description"
        android:layout_alignStart="@+id/upload_lodge_description"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_lodge_description" />


    <EditText
        android:id="@+id/upload_lodge_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/upload_lodge_location"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/upload_lodge_location"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_lodge_location" />

</android.support.constraint.ConstraintLayout>
